{
  "name": "codeedu-typescript-node-stater",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "prod": "node dist/index.js",
    "cleandist": "rimraf dist",
    "build": "npm run cleandist && sucrase ./src -d ./dist --transforms typescript,imports",
    "ts-node": "ts-node",
    "frontend-dev": "webpack --mode=development",
    "frontend-watch": "webpack --mode=development --watch",
    "frontend-build": "webpack --mode=production"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.12",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "sucrase": "^3.15.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "npm run ts-node src/index.ts"
  }
}
